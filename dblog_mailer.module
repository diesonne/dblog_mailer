/**
 * Implements hook_cron().
 */
function dblog_mailer_cron() {
  $dblog_mailer =  \Drupal::service('dblog_mailer');

  if ($dblog_mailer->fetchLogs()) {
    $dblog_mailer->processLogTable();
  }
}

